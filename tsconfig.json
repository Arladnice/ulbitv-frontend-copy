{
	"compilerOptions": {
		"outDir": "./build",
		"noImplicitAny": true,
		"module": "ESNext",
		"target": "es5",
		"jsx": "react-jsx",
		"allowJs": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"paths": {
			"*": ["./src/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx", "config/jest/setup.ts"],
	"exclude": ["node_modules"],
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}
