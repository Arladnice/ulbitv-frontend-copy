{
	"compilerOptions": {
		"outDir": "./build",
		"noImplicitAny": true,
		"module": "ESNext",
		"target": "es5",
		"jsx": "react",
		"allowJs": true,
		"moduleResolution": "node",
		// Позволяет работать с пакетами commonJS(require() module.export),
		// как с обычными пакетами, с помощью import
		"esModuleInterop": true,
		// если в пакете нет default export, то он будет создан автоматически
		"allowSyntheticDefaultImports": true
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}
